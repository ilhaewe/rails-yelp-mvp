<div class="container mt-5">
  <h1 class="mb-4">Restaurants</h1>

  <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary mb-4" %>

  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 mb-4">
        <%= link_to restaurant_path(restaurant), class: "text-decoration-none" do %>
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= restaurant.name %></h5>
              <p class="card-text text-muted"><%= restaurant.category.capitalize %></p>
              <p class="card-text"><small class="text-muted"><%= restaurant.address %></small></p>
              <%= link_to "delete", restaurant_path(restaurant), data: { turbo_method: :delete, turbo_confirm: "Es tu sÃ»r ?" }, class: "btn btn-danger mt-3" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
